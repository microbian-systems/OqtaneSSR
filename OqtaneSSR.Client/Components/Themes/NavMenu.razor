@using OqtaneSSR.Client.Models

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">OqtaneSSR</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @foreach (var page in PageState.Modules.GroupBy(item => item.PagePath).Select(group => group.First()))
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@(page.PagePath.Replace("/", ""))" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill" aria-hidden="true"></span> @(page.PageName)
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    [CascadingParameter]
    protected PageState PageState { get; set; }
}